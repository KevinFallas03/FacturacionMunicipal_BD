@model List<model.entity.Usuario>
@{
    ViewBag.Title = "Inicio";
}

<h2>Usuarios</h2>
<div class="container-fluid">
    <div>
        <a class="btn btn-primary" href="/Usuario/Create">Nuevo</a>
    </div>
    <table class="table">
        <tr class="btn-primary">
            <th>Nombre</th>
            <th>Contraseña</th>
            <th>Tipo usuario</th>
            <th></th>
        </tr>
        @foreach (var objetoUsuario in Model)
        {
            <tr>
                <td>@objetoUsuario.NombreUsuario</td>
                <td>@objetoUsuario.Password</td>
                <td>@objetoUsuario.TipoUsuario</td>
                <td><a class="btn btn-danger" href="~/Usuario/Delete/@objetoUsuario.IdUsuario">Borrar</a></td>
            </tr>
        }
    </table>
    <div class="form-actions">
        @Html.ActionLink("Regresar al listado", "Inicio")
    </div>
</div>
