@model List<model.entity.Recibo>
@{
    ViewBag.Title = "Recibos Pendientes";
}

<h2>Recibos Pendientes</h2>
@using (Html.BeginForm("ConfirmarRecibosPagados", "Recibo", FormMethod.Post))
{
    <div class="container-fluid">
        <table class="table">
            <tr class="btn-success">
                <th></th>
                <th>ID Recibo</th>
                <th>Fecha</th>
                <th>Concepto de Cobro</th>
                <th>Seleccionar</th>
            </tr>
            @foreach (var objetoRecibo in Model)
            {
                <tr>
                    <td><a class="btn btn-info" href="~/Recibo/ReciboPendiente/@objetoRecibo.IdRecibo">Ver</a></td>
                    <td>@objetoRecibo.IdRecibo</td>
                    <td>@objetoRecibo.FechaEm</td>
                    <td>@objetoRecibo.NombreCC</td>
                    <td><input type="checkbox" name="ids" value="@objetoRecibo.IdRecibo" /> </td>
                </tr>
            }
        </table>
        <button type="submit" class="btn btn-primary" onclick="">Pagar</button>
    </div>
}
